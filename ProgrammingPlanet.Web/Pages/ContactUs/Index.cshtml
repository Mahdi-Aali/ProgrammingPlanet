@page "/ContactUs"
@model ProgrammingPlanet.Web.Pages.ContactUs.IndexModel
@inject IConfiguration configuration;
@{
    ViewBag.Title = "Contact with us";
    ViewBag.Description = "Contact with programming planet web site admin";
    ViewBag.KeyWords = "Contact, programming, programming planet, contact us";
}

@section css
    {
    <script src="https://www.google.com/recaptcha/api.js" async defer></script>
}

<section id="contact" class="contact mb-5">
    <div class="container aos-init aos-animate" data-aos="fade-up">

        <div class="row">
            <div class="col-lg-12 text-center mb-5">
                <h1 class="page-title">Contact us</h1>
            </div>
        </div>

        <div class="row gy-4">

            <div class="col-md-4">
                <div class="info-item">
                    <i class="bi bi-geo-alt"></i>
                    <h3>Address</h3>
                    <address>East Beilankoh Street, TBZ 7 Tir, IR.Iran</address>
                </div>
            </div><!-- End Info Item -->

            <div class="col-md-4">
                <div class="info-item info-item-borders">
                    <i class="bi bi-phone"></i>
                    <h3>Phone Number</h3>
                    <p><a href="tel:+989058785110">+98 905 878 5110</a></p>
                </div>
            </div><!-- End Info Item -->

            <div class="col-md-4">
                <div class="info-item">
                    <i class="bi bi-envelope"></i>
                    <h3>Email</h3>
                    <p><a href="mailto:info@programmingplanet.com">info@programmingplanet.com</a></p>
                </div>
            </div><!-- End Info Item -->

        </div>

        <div class="form mt-5">
            <form asp-page="/ContactUs/Index" method="post" role="form" class="php-email-form">
                <div class="row">
                    <div class="form-group col-md-6">
                        <input asp-for="ContactUs.Name" class="form-control" placeholder="Your Name">
                    </div>
                    <div class="form-group col-md-6">
                        <input asp-for="ContactUs.Email" class="form-control" placeholder="Your Email">
                    </div>
                </div>
                <div class="form-group">
                    <input asp-for="ContactUs.Subject" class="form-control" placeholder="Subject">
                </div>
                <div class="form-group">
                    <textarea asp-for="ContactUs.Message" class="form-control" rows="5" placeholder="Message"></textarea>
                </div>
                <div class="g-recaptcha" data-sitekey="@configuration.GetSection("Recaptcha-SiteKey").Value.ToString()"></div>
                <div class="text-danger" asp-validation-summary="All">
                </div>
                <div class="text-center">
                    <button type="submit">Send Message</button>
                </div>
            </form>
        </div><!-- End Contact Form -->

    </div>
</section>


@section script
    {
    <script src="https://www.google.com/recaptcha/api.js?&render=explicit" async defer></script>
    <partial name="_ValidationPartial" />
}